#ifndef PWMIRQ_H
#define PWMIRQ_H

#define PWMMR0I (1<<0)
#define PWMMR0R (1<<1)
#define PWMMR0S (1<<2)

#define PWMM0IRQ (1<<0)
#define PWMM1IRQ (1<<1)
#define PWMM2IRQ (1<<2)
#define PWMM3IRQ (1<<3)
#define PWMM4IRQ (1<<8)
#define PWMM5IRQ (1<<9)
#define PWMM6IRQ (1<<10)


#define PWMENA2 (1<<10)

extern unsigned int inactivity_cnt;

void startPWMIRQ(void);
PT_THREAD (backl_proc(struct pt *pt));
 
#endif
